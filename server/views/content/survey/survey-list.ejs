<div class="container">
    <h1><%= title %></h1>
    <div class="row">
        <div class="col">
            <a href="/survey/add" id="addButton" class="btn btn-primary mb-1"><i class="fas fa-plus-circle"></i> Add Survey</a>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Survey Name</th>
                        <th scope="col">Survey Description</th>
                        <th scope="col">Survey Link</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let count=0; count < survey.length; count++ ) { %>
                    <tr>
                        <th scope="row">
                            <%= count +1 %>
                        </th>
                        <td>
                            <%= survey[count].surveyName %>
                        </td>
                        <td>
                            <%= survey[count].surveyDescription %>
                        </td>
                        <td>
                            <a href="/take/<%= survey[count]._id %>">Take This Survey!</a>
                        </td>
                        <!-- TODO: We need these buttons to appear only if the user is logged in! -->
                        <td class="text-center"><a href="/survey/edit/<%= survey[count]._id %>" class="btn btn-primary btn-sm edit">Edit</a></td>
                        <td class="text-center"><a href="/survey/delete/<%= survey[count]._id %>" class="btn btn-danger btn-sm delete">Delete</a></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>